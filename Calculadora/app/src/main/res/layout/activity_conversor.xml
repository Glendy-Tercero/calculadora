<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConversorView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#131313">

    <LinearLayout
        android:id="@+id/Layout"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginTop="35dp"
        android:background="#222222"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/LayoutDatos"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginTop="35dp"
        android:background="#222222"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TxtDatos"
            android:layout_width="286dp"
            android:layout_height="65dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

        <View
            android:id="@+id/dividerDato"
            android:layout_width="290dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TxtResultadoDatos"
            android:layout_width="286dp"
            android:layout_height="70dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end|bottom"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutTiempo"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginTop="35dp"
        android:background="#222222"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TxtTiempo"
            android:layout_width="286dp"
            android:layout_height="65dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

        <View
            android:id="@+id/dividerTiempo"
            android:layout_width="290dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TxtResultadoTiempo"
            android:layout_width="286dp"
            android:layout_height="70dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end|bottom"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LayoutLongitud"
        android:layout_width="310dp"
        android:layout_height="210dp"
        android:layout_marginTop="35dp"
        android:background="#222222"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/TxtLongitud"
            android:layout_width="286dp"
            android:layout_height="65dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

        <View
            android:id="@+id/dividerLongitud"
            android:layout_width="290dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TxtResultadoLongitud"
            android:layout_width="286dp"
            android:layout_height="70dp"
            android:fontFamily="@font/eras_demi_itc"
            android:foregroundTint="#000000"
            android:gravity="end|bottom"
            android:textColor="#E5CD57"
            android:textSize="35sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/BtnDatos"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:background="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:gravity="center"
        android:text="Datos"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout" />

    <TextView
        android:id="@+id/BtnTiempo"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:background="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:gravity="center"
        android:text="Tiempo"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout" />

    <TextView
        android:id="@+id/BtnLongitud"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:background="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:gravity="center"
        android:text="Longitud"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Layout" />

    <ImageButton
        android:id="@+id/BtnEliminarCon"
        android:layout_width="36dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="#131313"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLongitud"
        app:srcCompat="@mipmap/eliminar_x50" />

    <LinearLayout
        android:id="@+id/LayoutLista"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTiempo" />

    <LinearLayout
        android:id="@+id/ListaDatos"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTiempo">

        <Spinner
            android:id="@+id/SpnConvertirDato"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/flecha_x60" />

        <Spinner
            android:id="@+id/SpnDatoConvertido"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ListaTiempo"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTiempo">

        <Spinner
            android:id="@+id/SpnConvertirTiempo"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/flecha_x60" />

        <Spinner
            android:id="@+id/SpnTiempoConvertido"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ListaLongitud"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTiempo">

        <Spinner
            android:id="@+id/SpnConvertirLongitud"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/flecha_x60" />

        <Spinner
            android:id="@+id/SpnLongitudConvertido"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:backgroundTint="#E5CD57"
            android:fontFamily="@font/eras_demi_itc"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="345dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LayoutLista" />

    <Button
        android:id="@+id/BtnCCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/kumbh_sans_bold"
        android:text="C"
        android:textColor="#ff4132"
        android:textSize="25sp"
        android:verticalScrollbarPosition="left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnTresCon"
        app:rippleColor="#3EFF4132" />

    <Button
        android:id="@+id/BtnCeroCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnUnoCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnPuntoCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="."
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnDosCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnTresCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="3"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnSeisCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnUnoCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="1"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnCuatroCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnDosCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnCincoCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnCincoCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="5"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnOchoCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnCuatroCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="4"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnSieteCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnSeisCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="6"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnNueveCon"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnSieteCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="7"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnOchoCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="8"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:rippleColor="#6E5E0F" />

    <Button
        android:id="@+id/BtnNueveCon"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#222222"
        android:fontFamily="@font/eras_demi_itc"
        android:text="9"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:rippleColor="#6E5E0F" />

</androidx.constraintlayout.widget.ConstraintLayout>